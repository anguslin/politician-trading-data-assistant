{
  "name": "politician-trading-data-assistant",
  "version": "1.0.0",
  "description": "Node.js + Express backend for Politician Trading Data Assistant - connecting frontend to Hugging Face LLM API and MCP Capitol Trades server",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "start:local": "cross-env NODE_ENV=development node server.js",
    "dev:local": "cross-env NODE_ENV=development node --watch server.js",
    "test": "node scripts/testServer.js",
    "test:remote": "cross-env BASE_URL=https://politician-trading-data-assistant.onrender.com node scripts/testServer.js",
    "test:llm": "node scripts/testLLM.js"
  },
  "keywords": [
    "express",
    "llm",
    "mcp",
    "hugging-face"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anguslin/mcp-capitol-trades": "^1.0.0",
    "@huggingface/inference": "^4.13.3",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3"
  }
}
